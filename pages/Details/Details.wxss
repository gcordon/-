#details {
}
#details .d-content {
    display: flex;
    flex-direction: left;
    font-size: 30rpx;
    height: auto;
    background-color: #eee;
}
#details .d-content .txt {
    padding: 30rpx 0 0 30rpx;
    height: auto;
    width: 60%;
}
#details .d-content .txt text {
    line-height: 1.8;
}
#details .d-content .txt .title{
    font-size: 50rpx;
    font-weight: bold;
    line-height: 1;
}
#details .d-content .img {
    width: 40%;
    height: 280rpx;
}
#details .d-content .img image{
    width: 100%;
    height: 100%;
}